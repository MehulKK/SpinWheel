<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:LuckyWheel="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.macv.wheeldemo.MainActivity">


    <Button
        android:id="@+id/spin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="#FDAEB6"
        LuckyWheel:layout_constraintStart_toStartOf="parent"
        LuckyWheel:layout_constraintEnd_toEndOf="parent"
        LuckyWheel:layout_constraintTop_toTopOf="parent"
        android:text="@string/spin"
        android:textAllCaps="false"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="#FDAEB6"
        android:text="@string/category_component"
        LuckyWheel:layout_constraintStart_toStartOf="@+id/spin"
        LuckyWheel:layout_constraintEnd_toEndOf="@+id/spin"
        LuckyWheel:layout_constraintTop_toBottomOf="@+id/spin"
        android:textAllCaps="false"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnAchievement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="#FDAEB6"
        android:text="@string/achievement_component"
        LuckyWheel:layout_constraintStart_toStartOf="@+id/btnCategory"
        LuckyWheel:layout_constraintEnd_toEndOf="@+id/btnCategory"
        LuckyWheel:layout_constraintTop_toBottomOf="@+id/btnCategory"
        android:textAllCaps="false"
        android:textColor="@android:color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>
